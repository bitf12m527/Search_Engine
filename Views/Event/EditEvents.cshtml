@{
    Layout = null;
}
@using p3.Models
@using System.Linq
@model System.Collections.ArrayList

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEvent</title>
    <link href="/Content/bootst.css" rel="stylesheet" />
    <script src="/Scripts/bootstrap.js"></script>
</head>
<body>
    <div style="color:white; font-family:'Comic Sans MS'">
        @foreach (Event e in Model)
        {

            <form role="form" action="Edit" method="post">

                <input type="hidden" name="id" class="form-control" value="@e.Id">


                <h3>   @e.Date</h3>
                <input type="text" name="date" class="form-control" placeholder="@e.Date">

                <h3>  @e.EventDescription </h3>
                <input type="text" name="des" class="form-control" placeholder="@e.EventDescription">
                <button type="submit" class="btn btn-default">Edit Event</button>
            </form>


        }

    </div>

</body>
</html>
