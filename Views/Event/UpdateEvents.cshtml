@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using p3.Models
@using System.Linq
@model System.Collections.ArrayList

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEvent</title>
    <link href="/Content/bootst.css" rel="stylesheet" />
    <script src="/Scripts/bootstrap.js"></script>
</head>
<body>
    <div style="color:white; font-family:'Comic Sans MS'">
        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-8">
                <table border="1" style="color:white; font-family:'Comic Sans MS'">
                    <thead>
                        <tr class="btn-primary" style="text-align:center">

                            <th>Event No </th>
                            <th>Date </th>
                            <th>Description </th>
                            <th>Delete </th>
                            <th>Edit </th>

                        </tr>
                    </thead>


                    @foreach (Event e in Model)
                    {
                        <tr>
                            <td> <h3>  @e.Id </h3> </td>
                            <td> <h3>   @e.Date</h3> </td>
                            <td> <h3>  @e.EventDescription </h3> </td>
                            <td>

                                <form role="form" action="DeleteEvents" method="post">
                                    <input type="hidden" value="@e.Id" name="id" class="form-control">
                                    <button type="submit" class="btn btn-default">Delete</button>
                                </form>

                            </td>

                            <td>

                                <form role="form" action="EditEvents" method="post">
                                    <input type="hidden" value="@e.Id" name="id" class="form-control">
                                    <button type="submit" class="btn btn-default">Edit</button>
                                </form>
                            </td>

                        </tr>
                    }
                </table>
            </div>
        </div>


        <div class="row" style="color:white; font-family:'Comic Sans MS'">
            <div class="col-xs-3"></div>
            <div class="col-xs-8">
                <h3>For Adding more Events </h3>


                <form role="form" action="AddEvent" method="post">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Date  </span>
                        <input type="text" name="date" class="form-control" placeholder="14-08-2016" aria-describedby="basic-addon1" required>
                    </div>
                    <br>  <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Event Description  </span>
                        <input type="text" name="des" class="form-control" placeholder="Independence Day" aria-describedby="basic-addon1" required>
                    </div>
                    <br>  <br>


                    <button type="submit" class="btn btn-default pull-right">Add</button>
                </form>

            </div>


        </div>

</body>
</html>
