@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using p3.Models
@using System.Linq
@model System.Collections.ArrayList

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEvent</title>
    <link href="/Content/bootst.css" rel="stylesheet" />
    <script src="/Scripts/bootstrap.js"></script>
</head>
<body>
    <div style="color:white; font-family:'Comic Sans MS'">
        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-8">

                <table border="1">
                    <thead>
                        <tr class="btn-primary" style="text-align:center">

                            <th>User Id </th>
                            <th>User Name </th>
                            <th>Email </th>
                            <th>Delete </th>


                        </tr>
                    </thead>


                    @foreach (User u in Model)
                    {
                        <tr>
                            <td> <h3>  @u.Id </h3> </td>
                            <td> <h3>   @u.UserName</h3> </td>
                            <td> <h3>  @u.Email </h3> </td>
                            <td>

                                <form role="form" action="DeleteUser" method="post">
                                    <input type="hidden" value="@u.Id" name="id" class="form-control">
                                    <button type="submit" class="btn btn-default">Delete</button>
                                </form>

                            </td>


                        </tr>
                    }
                </table>

            </div>
        </div>

    </div>

</body>
</html>
