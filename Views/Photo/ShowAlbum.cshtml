@{
    
}
@using p3.Models
@using System.Linq
@model System.Collections.ArrayList
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update Photo Gallery</title>
    <link href="/Content/bootst.css" rel="stylesheet" />
    <script src="/Scripts/bootstrap.js"></script>
</head>
<body>

    <div style="color:white; font-family:'Comic Sans MS'">
        <div class="row" >
            <div class="col-lg-4"></div>
            <div class="col-lg-6">
                <table border="1" style="color:white; font-family:'Comic Sans MS'">
                    <thead>
                        <tr class="btn-primary" style="text-align:center">

                            <th>Album Name</th>
                            <th>Check Album Photos</th>

                        </tr>
                    </thead>


                    @foreach (Album a in Model)
                    {
                        <tr>

                            <td>@a.AlbumName</td>
                            <td>
                                <form role="form" action="AlbumPics" method="post">
                                    <input type="hidden" value="@a.Id" name="id" class="form-control">
                                    <button type="submit" class="btn btn-default">View Album</button>
                                </form>
                            </td>

                        </tr>
                    }

                </table>
                </div>
            </div>

            </div>



</body>
</html>