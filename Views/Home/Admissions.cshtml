@{
    
}
@using p3.Models
@using System.Linq
@model System.Collections.ArrayList
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admissions</title>
    <link href="/Content/bootst.css" rel="stylesheet" />
    <script src="/Scripts/bootstrap.js"></script>
</head>
<body>
   
    <div class="row" style="color:white; font-family:'Comic Sans MS'">
        <div class="col-md-3">

        </div>
        <div class="col-md-8">
            <h1 > Registration Procedure</h1>

            <p >
                Registration Forms are available for Playgroup to Class IX from Monday to Thursday<br />
                between 9:00 am and 11:00 am for a charge of Rs.300 at the following campuses:<br />

                Administrator’s office at LGS 31 FCC, Syed Maratab Ali Road for Playgroup to Class 1<br />
                Administrator’s office at LGS 55 Main Gulberg, for Classes II to IX<br />
                Please refer to the chart below to check your daughter’s age with the<br />
                class for which you desire admission. <br />
            </p>


        </div>


        <div class="row" style="color:white; font-family:'Comic Sans MS'">
            <div class="col-xs-4">

            </div>

            <div class="col-xs-4">

                @if (ViewBag.Reject != null)
                {
                    if (ViewBag.Reject.Equals("reject"))
                    {
                        <h3 >the form you submitted is Rejected</h3>
                        <p >Please fill the form carefully again</p>
                    }
                }
                <h1 >Admission Form</h1>

                <form role="form" action="/Home/AddmissionsForm" method="post">


                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Student name  </span>
                        <input type="text" name="sname" class="form-control" placeholder="M Asim" aria-describedby="basic-addon1" required>
                    </div>
                    <div class="input-group">
                        <input type="hidden" value="@Session["UId"]" name="id" class="form-control">
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Date of Birth  </span>
                        <input type="text" name="sdob" class="form-control" placeholder="24-10-1995" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Father  name  </span>
                        <input type="text" name="fname" class="form-control" placeholder=" M Ilyas" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Email  </span>
                        <input type="text" name="email" class="form-control" placeholder="bitf12m527@pucit.edu.pk" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Contact No  </span>
                        <input type="text" name="contact" class="form-control" placeholder="0344-4337232" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Address  </span>
                        <input type="text" name="address" class="form-control" placeholder="Himay wal Kasur" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">Class  </span>
                        <input type="text" name="clas" class="form-control" placeholder="6th" aria-describedby="basic-addon1" required>
                    </div>

                    <br> <br>

                    <button type="submit" class="btn btn-default pull-right">Submit form</button>
                </form>

            </div>

            <div class="col-xs-6">

            </div>

        </div>

    </div>
</body>
</html>